/*
Represent a graph of the following:
 G3 ----------------------------|
   |  G1 -----------| G2 ----|  |
   |    |  A        |    A   |  |
   |    |  ^        |        |  |
   |    |  | -- > C | -- > D |  |
   |    |  v        |        |  |
   |    |  B <----- | --- E  |  |
   |    |-----------|--------|  |
   |----------------------------|

 */

 // global node
 str a = "a";

 // build first graph
 graph g1 {
     ref a;
     str b = "b";
     str c = "c";

     rel ab = a | "ab",5 -> b;
     rel ac = a | "ac",5 -> c;
     rel bc = b | "bc",5 -> c;
 }

 // build second graph
 graph g2 {
     ref a;
     str d = "d";
 }

 // add to node 2
 g2 {
     str e = "e";
 }

 // hash to merge two graphs (there are NO relationships between them)
 g3 = g1#g2

 // add directed relationship g2 e -> g1 b by using the parent graph g3
 g3 {
     rel eb = e | "eb",5 -> b
 }